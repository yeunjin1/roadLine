<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="date"
            type="java.time.LocalDate" />
        <variable
            name="onItemClickListener"
            type="com.lgcns.crossdev.onboarding1.presentation.ui.plan.DateListAdapter.OnItemClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:onClick="@{() -> onItemClickListener.onItemClick(date)}"
        android:layout_width="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDateIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/selector_date_icon"
            android:gravity="center"
            android:text="@{date != null ? String.valueOf(date.dayOfMonth) : @string/a}"
            android:textColor="@color/selector_date_icon_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:text="@{date != null ? String.valueOf(date.monthValue)+'월' : @string/all}"
            android:textColor="@color/gray66"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvDateIcon"
            app:layout_constraintStart_toStartOf="@+id/tvDateIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvDateIcon"
            tools:text="8월" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
